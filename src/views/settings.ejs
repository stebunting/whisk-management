<%- include('partials/header', { title: 'Settings', user }) %>	
	<div class="card">
		<div class="card-header">
			<ul class="nav nav-tabs card-header-tabs">
				<li class="nav-item">
					<a class="nav-link active">Treatboxes</a>
				</li>
			</ul>
		</div>

		<div class="card-body">
			<h5 class="card-title">Treatbox Settings</h5>
			<form action="/user/settings" method="post">
				<div class="form-group row">
					<label for="combobox-price" class="col-md-3 col-form-label">Combo Box Price</label>
					<div class="input-group col-md-3">
						<input type="text" class="form-control" id="combobox-price" name="combobox-price" placeholder="Combo Box Price" value="<%=priceFormat(treatboxSettings.food.comboBox.price) %>" />
						<div class="input-group-append">
							<span class="input-group-text">SEK</span>
						</div>
					</div>
					<div class="col-md-3 form-control-plaintext">MOMs @ <%=treatboxSettings.food.comboBox.momsRate %>%: <%=priceFormat(treatboxSettings.food.comboBox.momsAmount) %> SEK</div>
				</div>

				<div class="form-group row">
					<label for="treatbox-price" class="col-md-3 col-form-label">Treat Box Price</label>
					<div class="input-group col-md-3">
						<input type="text" class="form-control" id="treatbox-price" name="treatbox-price" placeholder="Treat Box Price" value="<%=priceFormat(treatboxSettings.food.treatBox.price) %>" />
						<div class="input-group-append">
							<span class="input-group-text">SEK</span>
						</div>
					</div>
					<div class="col-md-3 form-control-plaintext">MOMs @ <%=treatboxSettings.food.treatBox.momsRate %>%: <%=priceFormat(treatboxSettings.food.treatBox.momsAmount) %> SEK</div>
				</div>
				
				<div class="form-group row">
					<label for="vegetablebox-price" class="col-md-3 col-form-label">Vegetable Box Price</label>
					<div class="input-group col-md-3">
						<input type="text" class="form-control" id="vegetablebox-price" name="vegetablebox-price" placeholder="Vegetable Box Price" value="<%=priceFormat(treatboxSettings.food.vegetableBox.price) %>" />
						<div class="input-group-append">
							<span class="input-group-text">SEK</span>
						</div>
					</div>
					<div class="col-md-3 form-control-plaintext">MOMs @ <%=treatboxSettings.food.vegetableBox.momsRate %>%: <%=priceFormat(treatboxSettings.food.vegetableBox.momsAmount) %> SEK</div>
				</div>
				
				<div class="form-group row">
					<label for="zone2-delivery-price" class="col-md-3 col-form-label">Zone 2 Delivery Price</label>
					<div class="input-group col-md-3">
						<input type="text" class="form-control" id="zone2-delivery-price" name="zone2-delivery-price" placeholder="Zone 2 Delivery Price" value="<%=priceFormat(treatboxSettings.delivery.zone2.price) %>" />
						<div class="input-group-append">
							<span class="input-group-text">SEK</span>
						</div>
					</div>
					<div class="col-md-3 form-control-plaintext">MOMs @ <%=treatboxSettings.delivery.zone2.momsRate %>%: <%=priceFormat(treatboxSettings.delivery.zone2.momsAmount) %> SEK</div>
				</div>
				<div class="form-group row">
					<div class="col-md-6 offset-md-3">
						<button type="submit" class="btn btn-primary" name="submit" value="treatboxUpdate">Update</button>
					</div>
				</div>
			</form>
		</div>
	</div>
<%- include('partials/footer') %>