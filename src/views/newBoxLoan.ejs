<%-include('partials/header', { page: 'newBoxLoan', title: 'New Box Loan', user }); %>
    <h3>New Loan</h3>

    <form method="post" action="/boxes/add" id="box_form" form-validation="true">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="forename">Forename</label>
          <input type="text" class="form-control" form-validation="true" form-validation-type="name" id="forename" name="forename" placeholder="Forename" value="">
        </div>
        <div class="form-group col-md-6">
          <label for="surname">Surname</label>
          <input type="text" class="form-control" form-validation="true" form-validation-type="name" id="surname" name="surname" placeholder="Surname" value="">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="email">E-Mail</label>
          <input type="text" class="form-control" form-validation="true" form-validation-type="email" id="email" name="email" placeholder="E-mail Address" value="">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="mobile">Phone Number</label>
          <input type="text" class="form-control" form-validation="true" form-validation-type="phone" id="mobile" name="mobile" placeholder="Phone Number" value="">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="date_out">Date Out</label>
          <input type="text" readonly class="form-control" id="date_out" name="date_out" value="<%=dates.today %>">
        </div>
        <div class="form-group col-md-6">
          <label for="date_in">Return Date</label>
          <input type="text" readonly class="form-control" id="date_in" name="date_in" value="<%=dates.due %>">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="notes">Notes</label>
          <textarea class="form-control" form-validation="true" form-validation-type="notes" id="notes" name="notes" rows="3" placeholder="Notes"></textarea>
        </div>
      </div>
      <button class="btn btn-primary form-validate" type="submit" id="box_submit" name="submit" value="add">Register</button>
    </form>
<%- include('partials/footer', { page: 'newBoxLoan' }) %>